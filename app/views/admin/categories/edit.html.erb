<div class="card bg-white rounded-md">
  <div class="card-header">
    <div class=" px-4 py-4">
      <h2>Edit Category</h2>
    </div>
    <hr className="mb-3" />
  </div>
  <div class="card-body px-4 py-6">
    <%= react_component('admin/categories/EditCategoryComp', 
      {
        category: @category,
        color: @category.category_color.present? ? @category.category_color : nil
      }
    ) %>
  </div>
</div>