<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag 'admin', media: 'all' %>
  <%= javascript_include_tag 'admin' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> 
</head>
<body class="h-screen flex flex-col">

  <!-- Main Content Wrapper -->
  <main class="flex flex-grow overflow-hidden">
    <!-- Sidebar -->
    <div class="w-1/6 bg-white text-white h-full overflow-y-auto">
      <%= render 'layouts/admin/sidebar' %>
    </div>

    <!-- Main Content -->
    <div class="w-5/6 bg-tertiary h-full overflow-y-auto p-4 mr-6 mt-2">
      <!-- Header -->
      <header>
        <%= render 'layouts/admin/header' %>
      </header>
      <div id="root"></div>
      <%= yield %>
      <%= render 'layouts/admin/toast_container' %>
    </div>
  </main>
</body>
</html>
